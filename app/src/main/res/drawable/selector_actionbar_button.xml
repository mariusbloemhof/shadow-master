<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/com_shadow_login_activity_background_start" />
            <gradient android:angle="180" android:endColor="@color/com_shadow_login_activity_background_start" android:startColor="@color/com_shadow_login_activity_background_start" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/com_shadow_actionbar_background" />
            <gradient android:angle="180" android:endColor="@color/com_shadow_actionbar_background" android:startColor="@color/com_shadow_actionbar_background" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>

