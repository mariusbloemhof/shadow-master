<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="180" android:endColor="@color/com_shadow_login_pressed" android:startColor="@color/com_shadow_login_pressed" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="180" android:endColor="@color/com_shadow_login_background" android:startColor="@color/com_shadow_login_background" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="180" android:endColor="@color/com_shadow_login_background" android:startColor="@color/com_shadow_login_background" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>
</selector>

